if ($_GET["Data"] == "Files") {

$_Module_Modify_DB_Query_SELECT_FILES			= $DB->query("SELECT * FROM {$_ACCESS_DATABASE_PREFIX}_files");

while ($_Module_Modify_DB_Query_SELECT_FILES_Fetch_Array = $DB->fetch_array($_Module_Modify_DB_Query_SELECT_FILES)) {

