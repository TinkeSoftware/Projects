fwrite($_OPEN_NEWS_FILE, "$_SPECIFY_NEWS_DATA");
fclose($_OPEN_NEWS_FILE);

													echo ($_Message_Modify_NEWS_UPDATED_SUCCESSFULLY);
} else {
													echo ($_Message_ERROR_ACTION_UNIVERSAL);
